{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "WebWorker"],
    "baseUrl": ".",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite-plugin-pwa/client", "cypress", "@testing-library/cypress"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "public/sw.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "test.ts",
    "**/-spec.ts",
    "**.*.worker.ts"
  ]
}
